<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <TextView
        android:id="@+id/tv_correct_wrong_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:id="@+id/ll_match_pair_result"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_correct_wrong_cnt"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_ans_options1_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple_rectangle"
            android:padding="@dimen/_2sdp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_ans_options2_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple_rectangle"
            android:padding="@dimen/_2sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_multiple_select_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_multiple_select_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/quicksand_bold"

            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/ripple_effect"
        android:text="@string/ok"
        android:textSize="@dimen/_12sdp" />
</RelativeLayout>
