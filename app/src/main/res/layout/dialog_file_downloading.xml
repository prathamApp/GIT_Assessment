<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_230sdp"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_file_trans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/download_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_file_trans">

            <TextView
                android:id="@+id/dialog_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"        android:fontFamily="@font/quicksand_bold"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/primaryText"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <com.pratham.assessment.custom.progress_layout.ProgressLayout
                android:id="@+id/dialog_progressLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                card_view:c_borderWidth="@dimen/_5sdp"
                card_view:c_isShowDesc="false"
                card_view:c_max="100"
                card_view:c_progressColor="@color/colorGreen" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.card.MaterialCardView>